{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "height": 500,
  "width": 400,
  "title": "Property Types Sold around Australia",
  "data": {
    "url": "https://raw.githubusercontent.com/towen123/FIT3179/main/property_data.csv"
  },
  "params": [
    {
      "name": "State_selection",
      "bind": {
        "input": "select",
        "options": [null, "ACT", "NSW", "QLD", "SA", "VIC", "WA"],
        "labels": ["Show All", "ACT", "NSW", "QLD", "SA", "VIC", "WA"],
        "name": "State Selection"
      }
    }
  ],
  "transform": [
    {"filter": "State_selection == null || datum.state == State_selection"}
  ],
  "encoding": {
    "x": {
      "field": "property_type",
      "type": "nominal",
      "title": "Property Type"
    },
    "y": {
      "aggregate": "count",
      "field": "price",
      "type": "quantitative",
      "title": "Count"
    },
    "color": {"field": "state", "type": "nominal", "title": "State"}
  },
  "layer": [
    {"mark": "bar"},
    {
      "mark": {"type": "text", "align": "center", "baseline": "bottom"},
      "encoding": {
        "text": {"aggregate": "valid", "field": "price", "type": "quantitative"}
      }
    }
  ],
  "config": {}
}